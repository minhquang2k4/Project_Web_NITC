<!doctype html>
<html lang="en">

<head>
    <title>NITC</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/hpcuaban.css">

</head>

<body>
    <script src="https://kit.fontawesome.com/0c88e329f8.js" crossorigin="anonymous"></script>
    <!-- header -->
    <div class="header">
        <div class="container">
            <div class="inner-logo">
                <img src="/image/logo.png" alt="logo">
                <div class="text">NITC</div>
            </div>
            <div class="inner-menu">
                <a href="#">Trang chủ</a>
                <a href="#">Thư viện của bạn</a>
            </div>
            <div class="inner-icon">
                <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-bs-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false"><i class="fa-regular fa-user"></i></a>
                <div class="dropdown-menu" aria-labelledby="dropdownId">
                    <a class="dropdown-item" href="#">Đăng nhập</a>
                    <a class="dropdown-item" href="#">Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->
    <!-- main -->
    <div class="inner-name">
        <div class="container">
            <div class="inner-title">
                Học phần của bạn
            </div>
            <div class="inner-luachon">
                <div class="flashcard">
                    <a href="#">
                        Flashcard
                    </a>
                </div>
                <div class="chonda">
                    <a href="#">
                        Chọn đáp án
                    </a>
                </div>  
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="name">
                    Xe cộ
                </div>
                <div class="school">
                    NEU
                </div>
            </div>
            <div class="col-6 description">
                Các loại xe phổ biến 
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="new-word">
                    <input type="text" placeholder="Từ mới">
                    <input type="text" placeholder="Nghĩa">
                    <div class="inner-add">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="display">
                <div class="col-12">
                    <div class="inner-display">
                        <div class="word">
                            Từ mới
                        </div>
                        <div class="mean">
                            Nghĩa
                        </div>
                    </div>
                    <div class="inner-display">
                        <div class="word">
                            Từ mới
                        </div>
                        <div class="mean">
                            Nghĩa
                        </div>
                    </div>

                    <div class="inner-display">
                        <div class="word">
                            Từ mới
                        </div>
                        <div class="mean">
                            Nghĩa
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- end main -->
    <!-- footer -->
    <div class="footer">
        <div class="container">
            <div class="inner-backgr">
            </div>
        </div>
    </div>
    <!-- end footer -->

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>